{{!< default}}

<div class="max-w-6xl mx-auto px-6 py-12">
    {{#author}}
        <header class="text-center mb-16">
            {{#if profile_image}}
                <div class="w-32 h-32 mx-auto mb-6 rounded-full overflow-hidden">
                    <img src="{{profile_image}}" alt="{{name}}" class="w-full h-full object-cover">
                </div>
            {{else}}
                <div class="w-32 h-32 mx-auto mb-6 rounded-full bg-gray-200 flex items-center justify-center">
                    <svg class="w-16 h-16 text-gray-400" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                    </svg>
                </div>
            {{/if}}

            <h1 class="text-4xl md:text-5xl font-bold mb-6">{{name}}</h1>

            {{#if bio}}
                <div class="text-lg text-gray-600 max-w-2xl mx-auto mb-8">{{bio}}</div>
            {{/if}}

            <div class="flex flex-wrap items-center justify-center gap-4 text-sm text-gray-600">
                {{#if location}}
                    <span class="flex items-center gap-1">
                        <span>üìç</span>
                        <span>{{location}}</span>
                    </span>
                {{/if}}
                {{#if website}}
                    <a href="{{website}}" target="_blank" rel="noopener" class="text-emerald-600 hover:text-emerald-700 transition-colors">{{website}}</a>
                {{/if}}
                
                <div class="flex gap-3">
                    {{#if twitter}}
                        <a href="{{social_url type="twitter"}}" target="_blank" rel="noopener" class="text-gray-600 hover:text-emerald-600 transition-colors">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/></svg>
                        </a>
                    {{/if}}
                    {{#if facebook}}
                        <a href="{{social_url type="facebook"}}" target="_blank" rel="noopener" class="text-gray-600 hover:text-emerald-600 transition-colors">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
                        </a>
                    {{/if}}
                    {{#if linkedin}}
                        <a href="{{social_url type="linkedin"}}" target="_blank" rel="noopener" class="text-gray-600 hover:text-emerald-600 transition-colors">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
                        </a>
                    {{/if}}
                    {{#if instagram}}
                        <a href="{{social_url type="instagram"}}" target="_blank" rel="noopener" class="text-gray-600 hover:text-emerald-600 transition-colors">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.618 5.367 11.986 11.988 11.986s11.987-5.368 11.987-11.986C24.014 5.367 18.635.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.49-3.323-1.297C4.198 14.895 3.708 13.744 3.708 12.447s.49-2.448 1.297-3.323C5.902 8.198 7.053 7.708 8.35 7.708s2.448.49 3.323 1.297c.897.875 1.387 2.026 1.387 3.323s-.49 2.448-1.297 3.323c-.875.897-2.026 1.387-3.323 1.387zm7.718 0c-1.297 0-2.448-.49-3.323-1.297-.897-.875-1.387-2.026-1.387-3.323s.49-2.448 1.297-3.323c.875-.897 2.026-1.387 3.323-1.387s2.448.49 3.323 1.297c.897.875 1.387 2.026 1.387 3.323s-.49 2.448-1.297 3.323c-.875.897-2.026 1.387-3.323 1.387z"/></svg>
                        </a>
                    {{/if}}
                    {{#if youtube}}
                        <a href="{{social_url type="youtube"}}" target="_blank" rel="noopener" class="text-gray-600 hover:text-emerald-600 transition-colors">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>
                        </a>
                    {{/if}}
                </div>
            </div>
        </header>
    {{/author}}

    <section>
        <h2 class="text-2xl font-semibold mb-8 text-center">Posts by {{primary_author.name}}</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {{#foreach posts}}
                <article class="bg-white rounded-lg border hover:border-emerald-200 transition-all hover:shadow-lg hover:-translate-y-1">
                    {{#if feature_image}}
                        <div class="aspect-video overflow-hidden rounded-t-lg">
                            <img src="{{feature_image}}" alt="{{title}}" class="w-full h-full object-cover">
                        </div>
                    {{/if}}
                    <div class="p-6">
                        <h3 class="text-xl font-semibold mb-3 line-clamp-2">
                            <a href="{{url}}" class="text-gray-900 hover:text-emerald-600 transition-colors">{{title}}</a>
                        </h3>
                        {{#if excerpt}}
                            <p class="text-gray-600 text-sm mb-4 line-clamp-3">{{excerpt}}</p>
                        {{/if}}
                        <div class="flex items-center justify-between text-xs text-gray-500">
                            <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMM DD, YYYY"}}</time>
                            {{#if reading_time}}
                                <span>{{reading_time}}</span>
                            {{/if}}
                        </div>
                    </div>
                </article>
            {{/foreach}}
        </div>
    </section>

    {{#if pagination.pages}}
        <nav class="mt-16 flex justify-center">
            <div class="flex gap-2">
                {{#if pagination.prev}}
                    <a href="{{pagination.prev}}" class="px-4 py-2 bg-emerald-500 text-white rounded-lg hover:bg-emerald-600 transition-colors">Previous</a>
                {{/if}}
                {{#if pagination.next}}
                    <a href="{{pagination.next}}" class="px-4 py-2 bg-emerald-500 text-white rounded-lg hover:bg-emerald-600 transition-colors">Next</a>
                {{/if}}
            </div>
        </nav>
    {{/if}}
</div>