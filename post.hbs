{{!< default}}

{{#post}}

<article class="max-w-4xl mx-auto px-6 py-12">
    <header class="mb-12 text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6 leading-tight">{{title}}</h1>
        <div class="flex flex-col md:flex-row items-center justify-center gap-4 text-gray-600 text-sm">
            <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM DD, YYYY"}}</time>
            {{#if reading_time}}
                <span class="hidden md:block">•</span>
                <span>{{reading_time}}</span>
            {{/if}}
            {{#if primary_tag}}
                <span class="hidden md:block">•</span>
                <a href="{{primary_tag.url}}" class="text-emerald-600 hover:text-emerald-700 transition-colors">{{primary_tag.name}}</a>
            {{/if}}
        </div>
    </header>

    {{#if feature_image}}
        <div class="mb-12">
            <img src="{{feature_image}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" class="w-full rounded-lg shadow-lg">
        </div>
    {{/if}}

    <div class="prose">
        {{content}}
    </div>

    {{#if tags}}
        <footer class="mt-12 pt-8 border-t border-gray-200">
            <div class="flex flex-wrap gap-2">
                {{#foreach tags}}
                    <a href="{{url}}" class="inline-block px-3 py-1 bg-gray-100 hover:bg-gray-200 text-gray-700 text-sm rounded-full transition-colors">{{name}}</a>
                {{/foreach}}
            </div>
        </footer>
    {{/if}}
</article>

{{/post}}