{{!< default}}

<div class="max-w-6xl mx-auto px-6 py-12">
    <header class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Archive</h1>
        <div class="text-lg text-gray-600 max-w-2xl mx-auto">
            {{#if description}}
                {{description}}
            {{else}}
                A collection of {{plural pagination.total empty="0 issues" singular="% issue" plural="% issues"}}
            {{/if}}
        </div>
    </header>

    {{#get "posts" filter="featured:true" limit="5" as |featured|}}
        {{#if featured}}
            <section class="mb-16">
                <h2 class="text-2xl font-semibold mb-8 text-center">Featured Posts</h2>
                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                    {{#foreach featured}}
                        <article class="bg-white rounded-lg border hover:border-emerald-200 transition-all hover:shadow-lg hover:-translate-y-1">
                            {{#if feature_image}}
                                <div class="aspect-video overflow-hidden rounded-t-lg">
                                    <img src="{{feature_image}}" alt="{{title}}" class="w-full h-full object-cover">
                                </div>
                            {{/if}}
                            <div class="p-6">
                                <h3 class="text-xl font-semibold mb-3 line-clamp-2">
                                    <a href="{{url}}" class="text-gray-900 hover:text-emerald-600 transition-colors">{{title}}</a>
                                </h3>
                                {{#if excerpt}}
                                    <p class="text-gray-600 text-sm mb-4 line-clamp-3">{{excerpt}}</p>
                                {{/if}}
                                <div class="flex items-center justify-between text-xs text-gray-500">
                                    <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMM DD, YYYY"}}</time>
                                    {{#if reading_time}}
                                        <span>{{reading_time}}</span>
                                    {{/if}}
                                </div>
                            </div>
                        </article>
                    {{/foreach}}
                </div>
            </section>
        {{/if}}
    {{/get}}

    <section>
        <h2 class="text-2xl font-semibold mb-8 text-center">Latest Posts</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {{#match pagination.page 2}}
                {{#get "posts" limit=@config.posts_per_page as |recent|}}
                    {{#foreach recent}}
                        <article class="bg-white rounded-lg border hover:border-emerald-200 transition-all hover:shadow-lg hover:-translate-y-1">
                            {{#if feature_image}}
                                <div class="aspect-video overflow-hidden rounded-t-lg">
                                    <img src="{{feature_image}}" alt="{{title}}" class="w-full h-full object-cover">
                                </div>
                            {{/if}}
                            <div class="p-6">
                                <h3 class="text-xl font-semibold mb-3 line-clamp-2">
                                    <a href="{{url}}" class="text-gray-900 hover:text-emerald-600 transition-colors">{{title}}</a>
                                </h3>
                                {{#if excerpt}}
                                    <p class="text-gray-600 text-sm mb-4 line-clamp-3">{{excerpt}}</p>
                                {{/if}}
                                <div class="flex items-center justify-between text-xs text-gray-500">
                                    <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMM DD, YYYY"}}</time>
                                    {{#if reading_time}}
                                        <span>{{reading_time}}</span>
                                    {{/if}}
                                </div>
                            </div>
                        </article>
                    {{/foreach}}
                {{/get}}
            {{/match}}
            {{#foreach posts}}
                <article class="bg-white rounded-lg border hover:border-emerald-200 transition-all hover:shadow-lg hover:-translate-y-1">
                    {{#if feature_image}}
                        <div class="aspect-video overflow-hidden rounded-t-lg">
                            <img src="{{feature_image}}" alt="{{title}}" class="w-full h-full object-cover">
                        </div>
                    {{/if}}
                    <div class="p-6">
                        <h3 class="text-xl font-semibold mb-3 line-clamp-2">
                            <a href="{{url}}" class="text-gray-900 hover:text-emerald-600 transition-colors">{{title}}</a>
                        </h3>
                        {{#if excerpt}}
                            <p class="text-gray-600 text-sm mb-4 line-clamp-3">{{excerpt}}</p>
                        {{/if}}
                        <div class="flex items-center justify-between text-xs text-gray-500">
                            <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMM DD, YYYY"}}</time>
                            {{#if reading_time}}
                                <span>{{reading_time}}</span>
                            {{/if}}
                        </div>
                    </div>
                </article>
            {{/foreach}}
        </div>
    </section>

    {{#if pagination.pages}}
        <nav class="mt-16 flex justify-center">
            <div class="flex gap-2">
                {{#if pagination.prev}}
                    <a href="{{pagination.prev}}" class="px-4 py-2 bg-emerald-500 text-white rounded-lg hover:bg-emerald-600 transition-colors">Previous</a>
                {{/if}}
                {{#if pagination.next}}
                    <a href="{{pagination.next}}" class="px-4 py-2 bg-emerald-500 text-white rounded-lg hover:bg-emerald-600 transition-colors">Next</a>
                {{/if}}
            </div>
        </nav>
    {{/if}}
</div>