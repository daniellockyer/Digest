{{!< default}}

{{#post}}

<article>
    {{#match @page.show_title_and_feature_image}}
        <header class="mb-12 text-center">
            <h1 class="text-4xl md:text-5xl font-bold mb-6 leading-tight">{{title}}</h1>
            {{#if custom_excerpt}}
                <p class="text-xl text-gray-600 max-w-2xl mx-auto">{{custom_excerpt}}</p>
            {{/if}}
        </header>

        {{#if feature_image}}
            <div class="mb-12">
                <img src="{{feature_image}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" class="w-full rounded-lg shadow-lg">
            </div>
        {{/if}}
    {{/match}}

    <div class="prose">
        {{content}}
    </div>
</article>

{{/post}}